{
  "env": {
    "CLAUDE_SOURCE_APP": "observability-dashboard",
    "CLAUDE_TAGS": "",
    "OBSERVABILITY_SERVER": "http://localhost:4000"
  },
  "hooks": {
    "PreToolUse": [
      { "matcher": "", "hooks": [{ "type": "command", "command": "python3 .claude/hooks/guard_hook.py" }, { "type": "command", "command": "python3 .claude/hooks/pre_tool_use.py" }] }
    ],
    "PostToolUse": [
      { "matcher": "", "hooks": [{ "type": "command", "command": "python3 .claude/hooks/post_tool_use.py" }] }
    ],
    "PostToolUseFailure": [
      { "matcher": "", "hooks": [{ "type": "command", "command": "python3 .claude/hooks/post_tool_use_failure.py" }] }
    ],
    "PermissionRequest": [
      { "matcher": "", "hooks": [{ "type": "command", "command": "python3 .claude/hooks/permission_request.py" }] }
    ],
    "Notification": [
      { "matcher": "", "hooks": [{ "type": "command", "command": "python3 .claude/hooks/notification.py" }] }
    ],
    "UserPromptSubmit": [
      { "matcher": "", "hooks": [{ "type": "command", "command": "python3 .claude/hooks/user_prompt_submit.py" }] }
    ],
    "Stop": [
      { "matcher": "", "hooks": [{ "type": "command", "command": "python3 .claude/hooks/stop.py" }] }
    ],
    "SubagentStop": [
      { "matcher": "", "hooks": [{ "type": "command", "command": "python3 .claude/hooks/subagent_stop.py" }] }
    ],
    "SubagentStart": [
      { "matcher": "", "hooks": [{ "type": "command", "command": "python3 .claude/hooks/subagent_start.py" }] }
    ],
    "PreCompact": [
      { "matcher": "", "hooks": [{ "type": "command", "command": "python3 .claude/hooks/pre_compact.py" }] }
    ],
    "SessionStart": [
      { "matcher": "", "hooks": [{ "type": "command", "command": "python3 .claude/hooks/session_start.py" }] }
    ],
    "SessionEnd": [
      { "matcher": "", "hooks": [{ "type": "command", "command": "python3 .claude/hooks/session_end.py" }] }
    ]
  }
}
