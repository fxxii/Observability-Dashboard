{
  "env": {
    "CLAUDE_SOURCE_APP": "YOUR_PROJECT_NAME",
    "HOOK_TAGS": "[]",
    "OBS_SERVER": "http://localhost:4000"
  },
  "hooks": {
    "SessionStart": [{"type": "command", "command": "python /PATH/TO/hooks/session_start.py"}],
    "Stop": [{"type": "command", "command": "STOP_HOOK_ACTIVE=1 python /PATH/TO/hooks/stop.py"}],
    "SubagentStart": [{"type": "command", "command": "python /PATH/TO/hooks/subagent_start.py"}],
    "SubagentStop": [{"type": "command", "command": "python /PATH/TO/hooks/subagent_stop.py"}],
    "PreToolUse": [{"type": "command", "command": "python /PATH/TO/hooks/pre_tool_use.py"}],
    "PostToolUse": [{"type": "command", "command": "python /PATH/TO/hooks/post_tool_use.py"}],
    "PostToolUseFailure": [{"type": "command", "command": "python /PATH/TO/hooks/post_tool_use_failure.py"}],
    "Notification": [{"type": "command", "command": "python /PATH/TO/hooks/notification.py"}],
    "PermissionRequest": [{"type": "command", "command": "python /PATH/TO/hooks/permission_request.py"}],
    "UserPromptSubmit": [{"type": "command", "command": "python /PATH/TO/hooks/user_prompt_submit.py"}],
    "PreCompact": [{"type": "command", "command": "python /PATH/TO/hooks/pre_compact.py"}]
  }
}
